<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--add code ablut servlet-->
    <servlet>
        <servlet-name>justhomework</servlet-name>
        <servlet-class>bing.com.week2.demo.HelloWorldServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LifeCydeServlet</servlet-name>
        <servlet-class>com.Songpenghui.week3.LifeCydeServlet</servlet-class>
    </servlet>
    <!--automatic code-->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.Songpenghui.week3.RegisterServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern><!--write this url in action -->
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>justhomework</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LifeCydeServlet</servlet-name>
        <url-pattern>/life</url-pattern>
        <!--/life == LifeCydeServlet == com.Songpenghui.week3.LifeCydeServlet -->
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JDBCDemoServlet</servlet-name>
        <url-pattern>/jdbc</url-pattern>
    </servlet-mapping>

</web-app>